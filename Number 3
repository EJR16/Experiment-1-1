#include <iostream>
#include <conio.h>
#include<iomanip>

using namespace std;

int main ()
{
	 float netBalance, payment, d1, d2, averageDailyBalance, interest;

	 cout <<"Enter the net balance." << endl;
	 cin >> netBalance;

	 cout << " " << endl;

	 cout <<"Enter the payment made." << endl;
	 cin >> payment;

	 cout << " " << endl;

	 cout <<"Enter the the number of days in the billing cycle." << endl;
	 cin >> d1;

	 cout << " " << endl;

	  cout <<"Enter the number of days thye payment made before the billing due date." << endl;
	 cin >> d2;

	 cout << " " << endl;

	 cout << " Average Daily Balance = "  << setprecision(3) << netBalance * d1 - payment * d2 / d1 <<endl;
	 cout << " Interest = " << setprecision(3) << averageDailyBalance * 0.0152 << endl;

	 _getch;
	return 0;
}
